.fullpage{
    margin-top: 5%;
  background: linear-gradient(rgba(0,0,0,.4), rgba(0,0,0,.4)), url(<%= asset_path 'big_spy.jpg'%>) no-repeat;
  background-size: 1500px;
  background-position-y: bottom;
  background-position-x: center;
  height: 100vh;
}

.header{

  width: 50%;
  padding: 5%;
  text-align: center;
  background-color:darkgray;
  margin-right: auto;
  margin-left: auto;
  border-radius: 20px;
}

.header h1{
  font-size: 10vh;
}

.header h2, h3{
  font-size: 6vh;
}

.slackandsleuth{
  margin: 5%;
  display: flex;
  justify-content: center;
}

.slack, .sleuth{
  border-radius: 20px;
  height: 33vh;
  width: 33vw;
  text-align: center;
  margin: 5%;
}


.sleuth{
  background-color:slategray

}

.slack {
  background-color: slateblue;
}